<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permissions -->
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" android:maxSdkVersion="28"/> <!-- Up to Android 9 for write permissions -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.INTERNET"/> <!-- For playing online recordings -->

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Week_5"
        tools:targetApi="31">

        <!-- RegisterActivity -->
        <activity
            android:name=".RegisterActivity"
            android:label="Register Page"
            android:exported="false" />

        <!-- MainActivity: the app's launch activity -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="Authentication">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- FreedomWallActivity -->
        <activity
            android:name=".FreedomWallActivity"
            android:label="Freedom Wall"
            android:exported="true" />

        <!-- MultipleChoiceQuizActivity: Newly added for the quiz functionality -->
        <activity
            android:name=".MultipleChoiceQuizActivity"
            android:label="Quiz"
            android:exported="true" />

        <activity android:name=".StudentDashboard"
            android:label="Welcome"
            android:exported="false"/>


        <!-- Other activities in your application -->
        <activity android:name=".ViewWords"
            android:label="See words here!"
            android:exported="false" />

        <activity android:name=".EditTextHandler" android:exported="false" />

        <activity android:name=".AddText"
            android:label="Add more words here!"
            android:exported="false" />

        <activity android:name=".TeacherDashboard"
            android:label="Welcome"
            android:exported="false" />

        <activity android:name=".VoiceRecordingActivity"
            android:label="Record you Voice"
            android:exported="true" />

        <activity android:name=".ListeningExerciseActivity"
            android:label="Practice Listening"
            android:exported="false" />

        <activity android:name=".MatchWordsActivity"
            android:label="Show you skills!"
            android:exported="false" />

        <activity android:name=".SuccessPageActivity" android:exported="false" />
        <activity android:name=".MatchWordActivity2" android:exported="false" />

    </application>

</manifest>
