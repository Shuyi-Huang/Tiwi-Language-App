<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MatchWordsActivity">

    <!-- Layout for displaying Tiwi words -->
    <LinearLayout
        android:id="@+id/wordsLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingTop="32dp"
        android:paddingBottom="32dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/cowImageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/meaningsLayout"
        app:layout_constraintHeight_percent="0.7"
        app:layout_constraintWidth_percent="0.45">

        <!-- Example of spacing between words -->
        <TextView
            android:id="@+id/sampleEnglishMeaning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_marginTop="8dp"
            android:text="English"
            android:textSize="18sp" />

        <!-- More Tiwi words will be added dynamically in the activity -->
    </LinearLayout>

    <!-- Layout for displaying English meanings -->
    <LinearLayout
        android:id="@+id/meaningsLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingTop="32dp"
        android:paddingBottom="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/cowImageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/wordsLayout"
        app:layout_constraintHeight_percent="0.7"
        app:layout_constraintWidth_percent="0.45">

        <!-- Example of spacing between meanings -->
        <TextView
            android:id="@+id/sampleTiwiWord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Tiwi"
            android:textSize="18sp" />

        <!-- More English meanings will be added dynamically in the activity -->
    </LinearLayout>

    <!-- ImageView for the cow image at the bottom -->
    <ImageView
        android:id="@+id/cowImageView"
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:src="@drawable/cow"
        android:scaleType="fitCenter"
        android:contentDescription="Image of a cow"
        app:layout_constraintTop_toBottomOf="@id/meaningsLayout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp" />

    <!-- Back Button: Add this to return to Student Dashboard -->
    <ImageView
        android:id="@+id/back_button"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_back_arrow"
        android:contentDescription="@string/back"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
