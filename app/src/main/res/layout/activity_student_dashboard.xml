<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DCF0ED"
    android:padding="16dp"
    tools:context=".StudentDashboard">

    <!-- Dashboard Title -->



    <!-- View Words Button -->

    <TextView
        android:id="@+id/studentDashboardTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:gravity="center"
        android:text="Student Dashboard"
        android:textColor="#9D9448"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.8" />

    <!-- Listening Exercise Button -->

    <Button
        android:id="@+id/viewWordsButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="#E1DE9C"
        android:elevation="4dp"
        android:padding="12dp"
        android:text="View Words"
        android:textColor="#9D9448"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/studentDashboardTitle"
        app:layout_constraintWidth_percent="0.8" />

    <Button
        android:id="@+id/listeningExerciseButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="#E1DE9C"
        android:elevation="4dp"
        android:padding="12dp"
        android:text="Listening Exercises"
        android:textColor="#9D9448"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewWordsButton"
        app:layout_constraintWidth_percent="0.8" />

    <!-- Games Button -->
    <Button
        android:id="@+id/gamesButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="#ACC479"
        android:elevation="4dp"
        android:padding="12dp"
        android:text="Games"
        android:textColor="#9D9448"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/listeningExerciseButton"
        app:layout_constraintWidth_percent="0.8" />

    <!-- Freedom Wall Button -->
    <Button
        android:id="@+id/freedomWallButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="#6AA84F"
        android:elevation="4dp"
        android:padding="12dp"
        android:text="Freedom Wall"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gamesButton"
        app:layout_constraintWidth_percent="0.8" />

    <!-- New Quiz Button -->
    <Button
        android:id="@+id/quizButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="#9ACD32"
        android:elevation="4dp"
        android:padding="12dp"
        android:text="Quiz"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/freedomWallButton"
        app:layout_constraintWidth_percent="0.8" />

    <!-- Progress Tracker -->
    <TextView
        android:id="@+id/progressTracker"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:text="Progress: 0%"
        android:textColor="#9D9448"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/quizButton"
        app:layout_constraintWidth_percent="0.8" />

    <!-- Return Button -->
    <ImageView
        android:id="@+id/back_button"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_back_arrow"
        android:contentDescription="Back"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="1.0" />


    <ImageView
        android:id="@+id/bottomImageView"
        android:layout_width="216dp"
        android:layout_height="249dp"
        android:layout_marginStart="238dp"
        android:layout_marginTop="521dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="33dp"
        android:src="@drawable/fish"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.716"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.442"
        app:layout_constraintWidth_percent="16" />

</androidx.constraintlayout.widget.ConstraintLayout>
